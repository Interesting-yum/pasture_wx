.qiandao {
  position: absolute;
  left: 50%;
  top: 170px;
  width: 90%;
  /*  height: 120px; */
  border-radius: 8px;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  background-color: #fff;
  padding: 8px;
  z-index: 999;
}
.qiandao .flex-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100% !important;
}
.qiandao .flex-title text {
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 80%;
          flex: 1 1 80%;
  color: #0081FF;
  font-size: 30rpx;
  font-weight: 800;
  padding-left: 20rpx;
}
.qiandao .flex-title picker {
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 20%;
          flex: 1 1 20%;
}
.qiandao .flex-title picker view {
  background-color: rgba(37, 111, 134, 0.5);
  width: 100%;
  color: #28bebf;
}
.qiandao .flex-title picker view .flex-icon {
  font-size: 20rpx;
  color: #28bebf;
}
.qiandao .flex-sign:nth-child(2) {
  border-right: solid 1px #cacacadb;
  border-bottom: solid 1px #cacacadb;
}
.qiandao .flex-sign:nth-child(3) {
  border-bottom: solid 1px #cacacadb;
}
.qiandao .flex-sign:nth-child(4) {
  border-right: solid 1px #cacacadb;
}
.qiandao .flex-sign .flex-sign-image {
  width: 30px !important;
  height: 30px  !important;
}
.qiandao .flex-sign .flex-twice {
  font-size: 10px;
